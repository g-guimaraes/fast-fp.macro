{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "arrow-parens": ["error", "as-needed"],
    "no-shadow": "off",
    "implicit-arrow-linebreak": "off",
    "object-property-newline": "off",
    "arrow-body-style": "off",
    "object-curly-newline": "off",
    "max-lines-per-function": ["off", 100]
  }
}